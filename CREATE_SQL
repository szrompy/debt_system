 --  ตาราง Login
DROP TABLE IF EXISTS `TB_DT_LOGIN`;
CREATE TABLE `TB_DT_LOGIN` (
  `ID` BIGINT(20) UNSIGNED NOT NULL AUTO_INCREMENT,
  `USERNAME` VARCHAR(150),
  `PASSWORD` VARCHAR(150),
  `ROLE_ID` VARCHAR(150) ,
  `STATUS`  VARCHAR(1) ,
  `CREATE_BY` VARCHAR(150) ,
  `CREATE_DATE` TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP,
  PRIMARY KEY (`ID`)
) ENGINE=INNODB AUTO_INCREMENT=1 DEFAULT CHARSET=utf8;

-- ตาราง Role
DROP TABLE IF EXISTS `TB_DT_ROLE`;
CREATE TABLE `TB_DT_ROLE` (
  `ID` BIGINT(20) UNSIGNED NOT NULL AUTO_INCREMENT,
  `role_id` VARCHAR(150),
  `role_name` VARCHAR(150),
  `CREATE_BY` VARCHAR(150) ,
  `CREATE_DATE` TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP,
  PRIMARY KEY (`ID`)
) ENGINE=INNODB AUTO_INCREMENT=1 DEFAULT CHARSET=utf8;

-- ตาราง user
DROP TABLE IF EXISTS `TB_DT_USER`;
CREATE TABLE `TB_DT_USER` (
  `ID` BIGINT(20) UNSIGNED NOT NULL AUTO_INCREMENT,
  `username` VARCHAR(150),
  `fname` VARCHAR(150),
  `lname` VARCHAR(150),
  `age` VARCHAR(3),
  `CREATE_BY` VARCHAR(150) ,
  `CREATE_DATE` TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP,
  PRIMARY KEY (`ID`)
) ENGINE=INNODB AUTO_INCREMENT=1 DEFAULT CHARSET=utf8;

-- ตาราง หนี้
DROP TABLE IF EXISTS `TB_DT_DEBT`;
CREATE TABLE `TB_DT_DEBT` (
  `ID` BIGINT(20) UNSIGNED NOT NULL AUTO_INCREMENT,
  `username` VARCHAR(150),
  `debt_id` VARCHAR(150),
  `debt_trs_id` VARCHAR(150),
  `revenue_id` VARCHAR(150),
  `CREATE_BY` VARCHAR(150) ,
  `CREATE_DATE` TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP,
  PRIMARY KEY (`ID`)
) ENGINE=INNODB AUTO_INCREMENT=1 DEFAULT CHARSET=utf8;

-- ตาราง รายละเอียดหนี้
DROP TABLE IF EXISTS `TB_DT_DEBT_DETAIL`;
CREATE TABLE `TB_DT_DEBT_DETAIL` (
  `ID` BIGINT(20) UNSIGNED NOT NULL AUTO_INCREMENT,
  `interest_id` VARCHAR(150),
  `debt_name` VARCHAR(150),
  `debt_amount` DECIMAL(18,2),
  `CREATE_BY` VARCHAR(150) ,
  `CREATE_DATE` TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP,
  PRIMARY KEY (`ID`)
) ENGINE=INNODB AUTO_INCREMENT=1 DEFAULT CHARSET=utf8;

-- ตาราง ดอกเบี้ย
DROP TABLE IF EXISTS `TB_DT_INTEREST`;
CREATE TABLE `TB_DT_INTEREST` (
  `ID` BIGINT(20) UNSIGNED NOT NULL AUTO_INCREMENT,
  `debt_id` VARCHAR(150),
  `interest_amount` DECIMAL(18,2),
  `CREATE_BY` VARCHAR(150) ,
  `CREATE_DATE` TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP,
  PRIMARY KEY (`ID`)
) ENGINE=INNODB AUTO_INCREMENT=1 DEFAULT CHARSET=utf8;

-- ตาราง รายรับ
DROP TABLE IF EXISTS `TB_DT_REVENUE`;
CREATE TABLE `TB_DT_REVENUE` (
  `ID` BIGINT(20) UNSIGNED NOT NULL AUTO_INCREMENT,
  `revenue_date` VARCHAR(150),
  `revenue_amount` DECIMAL(18,2),
  `CREATE_BY` VARCHAR(150) ,
  `CREATE_DATE` TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP,
  PRIMARY KEY (`ID`)
) ENGINE=INNODB AUTO_INCREMENT=1 DEFAULT CHARSET=utf8;
